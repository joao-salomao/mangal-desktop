{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "log:default",
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "args": true,
          "name": "binaries/mangal-cli",
          "sidecar": true
        }
      ]
    },
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "args": true,
          "name": "binaries/mangal-cli",
          "sidecar": true
        }
      ]
    },
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "xdg-open",
          "cmd": "xdg-open",
          "args": true,
          "sidecar": false,
          "platforms": ["linux"]
        }
      ]
    },
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "open",
          "cmd": "open",
          "args": true,
          "sidecar": false,
          "platforms": ["macos"]
        }
      ]
    },
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "start",
          "cmd": "start",
          "args": true,
          "sidecar": false,
          "platforms": ["windows"]
        }
      ]
    },
    "shell:allow-kill",
    "shell:allow-open",
    "shell:allow-stdin-write",
    "dialog:default",
    "store:default",
    "sql:default",
    "sql:allow-execute",
    "os:default"
  ]
}