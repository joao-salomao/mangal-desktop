{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "Mangal Desktop",
  "version": "0.1.0",
  "identifier": "com.mangal-desktop.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "mangal-desktop",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "deb",
      "appimage",
      "msi"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "binaries/mangal-cli"
    ]
  },
  "plugins": {
    "sql": {
      "preload": [
        "sqlite:database.bin"
      ]
    }
  }
}
